+#define cfi_unchecked(ptr) (ptr)
+
+#define __SYM_TYPED_FUNC_START_ALIAS(name, fname) \
+	SYM_FUNC_START_ALIAS(name)
+
+#define SYM_TYPED_FUNC_START(name) \
+	SYM_FUNC_START(name)
+
